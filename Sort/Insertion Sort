def insertion_sort(arr):
    """
    Insertion Sort: Builds the sorted array one element at a time by inserting each element into its correct position.
    """
    for i in range(1, len(arr)):
        key = arr[i]
        j = i - 1
        while j >= 0 and arr[j] > key:
            arr[j + 1] = arr[j]
            j -= 1
        arr[j + 1] = key
    return arr
